{erl_opts, [debug_info]}.

{deps, 
 [
  {stringprep, {git, "https://github.com/processone/stringprep.git", {tag, "1.0.19"}}}
 ]}.

{plugins, [pc]}.

{artifacts, ["priv/jid.so"]}.

{port_specs,
 [
    {
        % Any arch
        ".*",
        % Create library
        "priv/jid.so",
        % From files
        ["c_src/*.cpp"],
        % Using options
        [ {env, [{ "CXXFLAGS", "$CXXFLAGS -O3 -std=c++11" }]} ]
     }
 ]}.

{provider_hooks,
 [
    {post,
     [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
     ]}
 ]}.

{profiles,
 [
    {test,
     [
        {deps, [{proper, "1.3.0"}]},
        {plugins,
         [
            pc,
            coveralls,
            {rebar3_codecov, {git, "https://github.com/esl/rebar3_codecov.git", {ref, "6bd31cc"}}}
         ]}
     ]}
 ]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
